<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jwake.ruinfriendshipsgame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumberOfFriendsActivity"
            android:label="@string/title_activity_number_of_friends" >
        </activity>
        <activity
            android:name=".ExistingFriendsActivity"
            android:label="@string/title_activity_existing_friends" >
        </activity>
        <activity
            android:name=".ScoreActivity"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name=".CardActivity"
            android:label="@string/title_activity_card" >
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name=".AddFriendsActivity"
            android:label="@string/title_activity_add_friends" >
        </activity>
    </application>

</manifest>
